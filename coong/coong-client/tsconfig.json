{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
    },
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  },
  "include": [
    "__generated__/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "capacitor.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]

}
