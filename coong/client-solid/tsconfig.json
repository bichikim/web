{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "declaration": true,
    "outDir": "lib",
    "target": "es2015",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  },
  "include": [
    "auto-imports.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
