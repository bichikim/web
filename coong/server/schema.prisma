datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Post {
  id                  String    @id @default(cuid())
  author              User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId            String?   @map("author")
  children            Post[]    @relation("Post_parent")
  content             Json      @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  likes               User[]    @relation("Post_likes")
  parent              Post?     @relation("Post_parent", fields: [parentId], references: [id])
  parentId            String?   @map("parent")
  publishDate         DateTime?
  status              String?   @default("draft")
  tags                Tag[]     @relation("Post_tags")
  thumbnail_filesize  Int?
  thumbnail_extension String?
  thumbnail_width     Int?
  thumbnail_height    Int?
  thumbnail_mode      String?
  thumbnail_id        String?
  title               String    @default("")

  @@index([authorId])
  @@index([parentId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  posts Post[] @relation("Post_tags")
}

model User {
  id                      String    @id @default(cuid())
  email                   String    @unique @default("")
  follower                User[]    @relation("User_follower")
  following               User[]    @relation("User_follower")
  isAdmin                 Boolean   @default(false)
  name                    String    @default("")
  password                String
  postLikes               Post[]    @relation("Post_likes")
  posts                   Post[]    @relation("Post_author")
  publicKey               String    @unique @default("")
  roles                   Json?     @default("\"[]\"")
  passwordResetToken      String?
  passwordResetIssuedAt   DateTime?
  passwordResetRedeemedAt DateTime?
  magicAuthToken          String?
  magicAuthIssuedAt       DateTime?
  magicAuthRedeemedAt     DateTime?
}