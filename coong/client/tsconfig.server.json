{
  "extends": "./tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist/run-ssr",
    "noEmit": false,
    "jsx": "preserve",
    "target": "ES2015",
    "importHelpers": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "exclude": [
    "src/**/*"
  ],
  "include": [
    "run-ssr/**/*.ts",
  ]
}

