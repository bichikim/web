{
  "name": "web",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@vue/cli-service",
      "**/@vue/**",
      "**/@quasar/**",
      "**/vue-router",
      "**/vue-loader"
    ]
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "rimraf node_modules && lerna clean",
    "dev:web": "lerna run dev --scope @winter-love/web --include-dependencies --parallel",
    "dev:web-snow": "lerna run dev --scope @winter-love/web-snow --include-dependencies --parallel",
    "dev:web-quasar": "lerna run dev --scope @winter-love/web-quasar --include-dependencies --parallel",
    "dev:web-vite": "lerna run dev --scope @winter-love/web-vite --include-dependencies --parallel",
    "format:package.json": "sort-package-json \"package.json\" \"packages/*/package.json\" ",
    "lint": "eslint --ext .ts \"src/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@types/chai": "^4.2.14",
    "@types/gulp": "^4.0.8",
    "@types/mocha": "^8.2.0",
    "@types/through2": "^2.0.36",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "@vue/cli-service": "^4.5.11",
    "@vue/eslint-config-standard": "^5.1.2",
    "@vue/eslint-config-typescript": "^5.1.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "del": "^6.0.0",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-vue": "^7.5.0",
    "gulp": "^4.0.2",
    "gulp-execa": "^2.0.0",
    "gulp-rename": "^2.0.0",
    "lerna": "^3.22.1",
    "rollup": "^2.38.5",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "sort-package-json": "^1.48.1",
    "through2": "^4.0.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.3",
    "vinyl-paths": "^3.0.1",
    "vue-pwa-asset-generator": "^1.6.0"
  },
  "engines": {
    "node": ">=12"
  }
}
