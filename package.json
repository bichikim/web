{
  "name": "web",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@vue/cli-service",
      "**/@vue/**",
      "**/@quasar/**",
      "**/vue-router",
      "**/vue-loader"
    ]
  },
  "scripts": {
    "build:web": "pnpm run build --filter @winter-love/web... --stream",
    "build:web-snow": "pnpm run build --filter @winter-love/web-snow... --stream",
    "build:web-quasar": "pnpm run build --filter @winter-love/web-quasar... --stream",
    "build:web-vite": "pnpm run build --filter @winter-love/web-snow... --stream",
    "clean": "rimraf node_modules && lerna clean",
    "dev:server": "pnpm run dev --filter @winter-love/server... --parallel",
    "dev:web": "pnpm run dev --filter @winter-love/web... --parallel",
    "dev:web-snow": "pnpm run dev --filter @winter-love/web-snow... --parallel",
    "dev:web-quasar": "pnpm run dev --filter @winter-love/web-quasar.. --parallel",
    "dev:web-vite": "pnpm run dev --filter @winter-love/web-vite... --parallel",
    "format:package.json": "sort-package-json \"package.json\" \"packages/*/package.json\" ",
    "lint": "eslint --ext .ts \"src/**/*.{ts,tsx}\"",
    "test": "jest"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@babel/preset-typescript": "^7.12.17",
    "@types/chai": "^4.2.15",
    "@types/gulp": "^4.0.8",
    "@types/mocha": "^8.2.1",
    "@types/through2": "^2.0.36",
    "@vue/cli-plugin-unit-jest": "^5.0.0-alpha.5",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@vue/test-utils": "^2.0.0-rc.2",
    "@typescript-eslint/parser": "^4.15.1",
    "@vue/cli-service": "^4.5.11",
    "@vue/eslint-config-standard": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "@vue/babel-plugin-transform-vue-jsx": "^1.2.1",
    "rollup-plugin-smart-asset": "^2.1.1",
    "rollup-plugin-ts-treeshaking": "^1.0.2",
    "@types/jest": "^26.0.20",
    "del": "^6.0.0",
    "eslint": "^7.20.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "eslint-plugin-vue": "^7.6.0",
    "gulp": "^4.0.2",
    "gulp-execa": "^2.0.0",
    "vue-jest": "^3.0.7",
    "gulp-rename": "^2.0.0",
    "lerna": "^3.22.1",
    "rollup": "^2.39.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-esbuild": "^2.6.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "sort-package-json": "^1.49.0",
    "through2": "^4.0.2",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.5",
    "vinyl-paths": "^3.0.1",
    "vue-pwa-asset-generator": "^1.6.0"
  },
  "engines": {
    "node": ">=12"
  }
}
