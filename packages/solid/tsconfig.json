{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "declaration": true,
    "outDir": "dist",
    "moduleResolution": "Node",
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "@winter-love/solid/use": ["src/use"],
      "@winter-love/solid/test": ["src/test"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.mts"]
}
