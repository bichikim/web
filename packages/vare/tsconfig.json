{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*",
      ],
      "dev/*": [
        "dev/*"
      ]
    },
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths" }
    ]
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*.ts",
    "dev/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "../../coong/client-react-18/auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
