{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration":  true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "types": [
      "@vue/runtime-core"
    ],
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
