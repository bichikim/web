{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "components/*": [
        "src/components/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  }
}
