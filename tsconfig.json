{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "noEmit": true,
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "noImplicitAny": false,
    "module": "esnext",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ESNext.Promise"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.md"
  ]
}
